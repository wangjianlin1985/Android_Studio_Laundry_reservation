<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.chengxusheji.domain">

	<class name="UserInfo" table="UserInfo">

          <!-- 主键用户名 -->
          <id name="user_name" type="string" length="20">
            <generator class="assigned"/>
          </id>

          <!-- 简单字符串属性: 登录密码 -->
          <property
            name="password"
            column="password"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 姓名 -->
          <property
            name="name"
            column="name"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 性别 -->
          <property
            name="sex"
            column="sex"
            type="string"
            length="4"
          />

          <!-- 简单日期型属性: 生日 -->
          <property
            name="birthDate"
            column="birthDate"
            	type="timestamp"
            	length="10"
          />

          <!-- 简单图片属性: 个人照片 -->
          <property
            name="userPhoto"
            column="userPhoto"
            type="string"
            length="50"
          />

          <!-- 简单字符串属性: 联系电话 -->
          <property
            name="telephone"
            column="telephone"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 住址 -->
          <property
            name="address"
            column="address"
            type="string"
            length="80"
          />

          <!-- 简单浮点型属性: 纬度 -->
          <property
            name="latitude"
            column="latitude"
            type="float"
          />

          <!-- 简单浮点型属性: 经度 -->
          <property
            name="longitude"
            column="longitude"
            type="float"
          />

          <!-- 简单字符串属性: 注册时间 -->
          <property
            name="regTime"
            column="regTime"
            type="string"
            length="20"
          />


		 
		
	</class>
	
</hibernate-mapping>
 
